@model UniversityProject_Demo.Models.Entity.Student

<h2 class="mb-5">
    آپدیت پروفایل
</h2>

<form class="border border-1 p-5" asp-controller="Student" asp-action="UpdateStudent" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PassWord"></label>
        <input class="form-control" asp-for="PassWord" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Time"></label>
        <input class="form-control" asp-for="Time" />
    </div>
    <input type="submit" class="btn btn-success" value="ذخیره" />

@*    <a class="btn btn-outline-secondary"
       asp-controller="Product" asp-action="Index">بازگشت</a>*@
</form>
