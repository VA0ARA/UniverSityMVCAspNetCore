@model UniversityProject_Demo.Models.DTOs.EntityStudentPanleDto
<h1> پنل دانشجو</h1>
<table class="table table-hover table-bordered table-responsive w-100">
    <tr>
        <td>شناسه</td>
        <td>نام</td>
        <td>نام خانوادگی</td>
        <td>نام کاربری</td>
        <td>رمز عبور</td>
        <td>ایمیل</td>
        <td>زمان</td>
    </tr>
        <tr>
            <td>@Model.student.Id</td>
            <td>@Model.student.FirstName</td>
            <td>@Model.student.LastName</td>
            <td>@Model.student.UserName</td>
            <td>@Model.student.PassWord</td>
            <td>@Model.student.Email</td>
            <td>@Model.student.Time  </td>
        <td><a class="btn-sm btn-info" asp-controller="Student" asp-action="SelectCourse">انتخاب درس</a></td>
        </tr>
</table>
<table class="table table-hover table-bordered table-responsive w-100">
    <tr>
        <td>شناسه</td>
        <td>نام</td>
        <td>زمان</td>
        <td>واحد</td>
        <td>نمره</td>
        <td>ظرفیت</td>
        <td>نام استاد</td>
    </tr>
    @foreach (var st in Model.Courcess)
    {
        <tr>
            <td>@st.Id</td>
            <td>@st.Name</td>
            <td>@st.Time</td>
            <td>@st.credit</td>
            <td>@st.Mark</td>
            <td>@st.capacity</td>
            <td>@st.lectuerer.LastName</td>
            <td>
                <form asp-controller="Student" asp-action="Delete" asp-route-id="@st.Id" method="post">
                    <input type="submit" class="btn-sm btn-danger" value="حذف">
                </form>
            </td>
        </tr>
    }
</table>
