<h1>لیست دانش آموزان</h1>
@*<a class="btn-sm btn-success" asp-controller="Courses" asp-action="Create">درس جدید</a>*@
<table class="table table-hover table-bordered table-responsive w-100">
    <tr>
        <td>شناسه</td>
        <td>نام</td>
        <td>نام خانوادگی</td>
        <td>نام کاربری</td>
        <td>رمز عبور</td>
        <td>ایمیل</td>
        <td>نقش</td>
        <td>زمان</td>
    </tr>
    @foreach (var st in Model)
    {
        <tr>
            <td>@st.Id</td>
            <td>@st.FirstName</td>
            <td>@st.LastName</td>
            <td>@st.UserName</td>
            <td>@st.PassWord</td>
            <td>@st.Email</td>
            <td>@st.role </td>
            <td>@st.Time  </td>

@*            <td><a class="btn-sm btn-info" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">مشاهده جزئیات</a></td>

            <td><a class="btn-sm btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">ویرایش</a></td>*@
            <td>
                <form asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@st.Id" method="post">
                    <input type="submit" class="btn-sm btn-danger" value="حذف">
                </form>
            </td>
        </tr>
    }
</table>