<table class="table table-hover table-bordered table-responsive w-100">
    <tr>
        <td>شناسه</td>
        <td>نام</td>
        <td>نام خانوادگی</td>
        <td>نام کاربری</td>
        <td>رمز عبور</td>
        <td>ایمیل</td>
        <td>نقش</td>
        <td>زمان</td>
    </tr>
    @foreach (var st in Model.students)
    {
        <tr>
            <td>@st.Id</td>
            <td>@st.FirstName</td>
            <td>@st.LastName</td>
            <td>@st.UserName</td>
            <td>@st.PassWord</td>
            <td>@st.Email</td>
            <td>@st.role </td>
            <td>@st.Time  </td>
            <td>
                <form asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@st.Id" method="post">
                    <input type="submit" class="btn-sm btn-danger" value="حذف">
                </form>
            </td>
        </tr>
    }
</table>







